{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "src/types" // Incluye la carpeta de tipos personalizados
  ],
  "exclude": ["node_modules"]
}
